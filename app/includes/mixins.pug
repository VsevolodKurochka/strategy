mixin item(href, active)
	if(active)
		li(class="active"): a( href=href ): block
	else	
		li: a( href=href ): block
mixin button(buttonClass, modalTarget)

	- buttonClass = buttonClass || 'vbtn vbtn-effect-shutter-vertical-out vbtn-corp'

	if(modalTarget != null)
		- modalTarget = modalTarget
	else
		- modalTarget = "#modalform"

	button(class=buttonClass data-func="vmodal" data-target=modalTarget)&attributes(attributes): block
mixin iconDefault(img)
	.vak-xs-12.vak-sm-6.vak-md-4.icon-wrap.icon-wrap-margin.icon-hover
		.icon-inner
			.icon-image
				.icon-image-inner: img(src=img)
			p.icon-title: block
mixin iconImageLeft(img)
	.vak-xs-12.vak-sm-6.vak-md-4.icon-wrap.icon-hover
		.icon-inner
			.icon-image: .icon-image-inner: img(src="")
			p.icon-title
mixin extra(img, title)
	.vrow.extra-row
		.vak-xs-12.vak-sm-6.extra-image
			img(src=img)
		.vak-xs-12.vak-sm-6
			p.vtitle-small-big.extra-title= title
			p.extra-text: block 
